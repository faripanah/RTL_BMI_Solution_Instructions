<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:id="rootVBox"
      fx:controller="org.example.demo1.BMIController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

<HBox spacing="10">
    <Label fx:id="lblWeight" text="Weight"/>
    <TextField fx:id="tfWeight" style="-fx-text-alignment:  left;"/>
</HBox>

<HBox spacing="10">
    <Label fx:id="lblHeight" text="Height" />
    <TextField fx:id="tfHeight" style="-fx-text-alignment:  left;"/>
</HBox>

<HBox spacing="10">
    <Button fx:id="btnCalculate" onAction="#onCalculateClick"/>
    <Label fx:id="lblResult"/>
</HBox>
    <Label fx:id="lblLocalTime"/> <!-- New Label for displaying local time -->
<HBox spacing="10">


    <Button text="FA!" onAction="#onFAClick" />
    <Button text="EN!" onAction="#onENClick" />
    <Button text="FR!" onAction="#onFRClick" />
    <Button text="UR!" onAction="#onURClick" />
    <Button text="VI!" onAction="#onVIClick" />
</HBox>

</VBox>
